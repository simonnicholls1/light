#!/bin/bash

# ASCII Art for 'LIGHT'
LIGHT_ART="
██╗     ██╗ ██████╗ ██╗  ██╗████████╗
██║     ██║██╔════╝ ██║  ██║╚══██╔══╝
██║     ██║██║  ███ ███████║   ██║
██║     ██║██║   ██ ██╔══██║   ██║
███████╗██║╚██████╔ ██║  ██║   ██║
╚══════╝╚═╝ ╚═════╝ ╚═╝  ╚═╝   ╚═╝
"

# Function to Display Help
function display_help {
    echo "$LIGHT_ART"
    echo "LIGHT - Financial Data Processing Toolkit"
    echo ""
    echo "Usage: light <command> [arguments]"
    echo ""
    echo "Commands:"
    echo "  add       Perform addition of columns"
    echo "  mom       Calculate momentum"
    echo "  ...       Other commands as per your implementation"
    echo ""
    echo "For more information on a specific command, type: light <command> --help"
}

# Check if at least one argument is provided
if [ $# -eq 0 ] || [ "$1" = "--help" ]; then
    display_help
    exit 0
fi

# Join all arguments into a single string
COMMAND_STRING="$*"

# Pass the command string to the Python module's main entry point
python -m light_module "$COMMAND_STRING"